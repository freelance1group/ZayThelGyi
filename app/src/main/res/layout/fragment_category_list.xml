<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSplashScreenBg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_category_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_margin="@dimen/et_padding_start_end"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_circle_24"
            app:fabSize="normal"
            android:translationZ="100dp"
            app:maxImageSize="60dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/rv_category_list"
            app:layout_constraintEnd_toEndOf="@id/rv_category_list"
            android:layout_marginRight="@dimen/label_margin_start_end"
            android:layout_marginBottom="@dimen/label_margin_top_bottom"/>



</androidx.constraintlayout.widget.ConstraintLayout>